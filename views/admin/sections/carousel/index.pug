extends ../../../layouts/admin/index2

block content
    .form__header.bs-8
        h1 #{section}
    .form__layout
        if (carousels.length > 0)
            p.text-center.text-bold.mb-3.mt-1 Imagenes
            #carousel-admin.bs-8
                each carousel in carousels
                    .slide-content
                        img(src=carousel.imagen alt='slide').img-responsive
            table.table.is-bordered.mt-3
                thead.yellow.text-white
                    tr
                        th Nombre
                        th Fecha de creaci√≥n
                        th Acciones
                tbody
                    each carousel in carousels
                        tr
                            td= carousel.nombre
                            td= carousel.created_at.toISOString().substr(0, 10)
                            td
                                form(action='/admin/carousel/delete/' + carousel.idcarrusel + '?_method=DELETE', method='POST')
                                    input(type='hidden' name='_method' value='DELETE')
                                    button(type='submit').button-hovered.purple.size-sm
                                        | Borrar
        else
            .border-bottom.mt-2.mb-5
            h3.text-center No existe ninguna imagen en el carrusel.
            .border-bottom.mt-5.mb-2
        .text-center
            a(href='/admin/carousel/add/').button-hovered.purple_custom.text-white Agregar imagen