extends ../../../layouts/admin/index2

block content
    .form__header.bs-8
        h1 #{section}
    .form__layout
        if (states.length > 0)
            table.table.table-bordered.table-hovered
                thead.white
                    tr
                        th Nombre
                        th Fecha de creaci√≥n
                        th Acciones
                tbody
                    each s in states
                        tr
                            td=s.estado
                            td=s.created_at.toISOString().substr(0, 10)     
                            td.has-row.is-centered
                                a(href='/admin/state/upd/' + s.idestado).button-hovered.button.not-rounded.text-white.purple_custom
                                    | Actualizar
                                form(action='/admin/state/delete/' + s.idestado + '?_method=DELETE' method='POST')
                                    input(type='hidden' name='_method' value='DELETE')
                                    button(type='submit').button.not-rounded.button-hovered.red_custom.text-white
                                        | Borrar
        else
            .border-bottom.mt-2.mb-5
            h3.text-center No existe ninguna ciudad registrada.
            .border-bottom.mt-5.mb-2
        if (user.rol === 0)
            .text-center
                a(href='/admin/state/add').button-hovered.purple_custom.text-white Agregar estado
    
        a(href='/admin').button__back Volver al inicio