extends ../layouts/site/index

block content  
    .section
        .feature.animate-right-ease
            .row
                .col.m4
                        p.counters.purple-text(data-value=allies) 0
                        p.title Aliados
                .col.m4
                        p.counters.purple-text(data-value=users) 0
                        p.title Emprendedores registrados
                .col.m4
                        p.counters.purple-text(data-value=publish) 0
                        p.title Publicidades realizadas
    .section
        .row.animate-left-ease
            .col.m3
                .card.skills
                    .card-content
                        i.bx.bxs-heart
                        p Compromiso y dedicación
            .col.m3
                .card.skills
                    .card-content
                        i.bx.bxs-group
                        p Equipo profesional
            .col.m3
                .card.skills
                    .card-content
                        i.bx.bx-support
                        p Soporte constante
            .col.m3
                .card.skills
                    .card-content
                        i.bx.bxs-award
                        p Tecnología de punta
    .section.banner.animate-in#banner
        .container
            .hero.has-shadow-md.text-white
                .hero-content.is-centered.has-column
                    p.hero-title El mejor lugar para conectar, desde la comodidad de tu hogar.
                    p.hero-subtitle ¿Qué esperas emprendedor?
                    a(href='/plan').btn.waves-effect.pulse.black ¡Comienza ya!
    .section.animate-in
        .container
            p.seccion-identify.text-bold Top 
                span.text-normal Rubik
            .divider.mb-3
        .row
            each res in top
                if (res.status === 1 && res.top === 1)
                    .col.m3.animate-in
                        .card.large.hoverable.card-publish
                            .card-image
                                img(src=res.logo)
                                a.btn-floating.halfway-fab.waves-effect.waves-light.purple.pulse.modal-trigger(href=('#modal' + res.idemprendimiento))
                                    i.material-icons(style='font-size: 1.5rem !important') visibility
                            .card-content
                                ul.collection
                                    li.collection-item
                                        i.bx.bxs-phone
                                        a.black-text(href='https://api.whatsapp.com/send?phone=' + res.telefono)=res.telefono                                                    
                                    if (res.redesSociales == 'instagram')
                                        li.collection-item
                                            i.bx.bxl-instagram-alt
                                            a.black-text(href='http://www.instagram.com/' + res.urlRedesSociales)= res.urlRedesSociales
                                    else if (res.redesSociales == 'facebook')
                                        li.collection-item
                                            i.bx.bxl-facebook-circle
                                            a.black-text(href='http://www.facebook.com/' + res.urlRedesSociales)= res.urlRedesSociales
                                    else if (res.redesSociales == 'twitter')
                                        li.collection-item
                                            i.bx.bxl-twitter  
                                            a.black-text(href='http://www.twitter.com/' + res.urlRedesSociales)= res.urlRedesSociales
                                    li.collection-item
                                        i.bx.bx-current-location 
                                        = res.direccion
                                    li.collection-item
                                        i.bx.bxs-truck 
                                        span Delivery: 
                                            = res.delivery ? 'Si' : 'No'
                                .center-align
                                    //a.btn.modal-trigger(href=('#modal' + res.idemprendimiento)) Mas información
                                    if (res.sitioWeb === 1)
                                        a(href=res.nombreUrl).btn.purple Catalogo
                    .modal(id=('modal' + res.idemprendimiento) style='z-index:9999 !important;')
                        .modal-content
                            .row
                                .col.m12
                                    p.center-align.f-3= res.emprendimiento
                                    p.text-bold Descripción: 
                                    p=res.descripcion
                                    p.text-bold Correo electrónico:
                                    p=res.correo
                                    p.text-bold Ubicación:
                                    each ci in city
                                        if (ci.idciudad === res.idciudad)    
                                            p=ci.ciudad
                                    if (res.foto1 == null)
                                    
                                    else
                                        if (!res.foto2 && !res.foto3 && !res.foto4 && !res.foto5 && !res.foto6)
                                            #carousel-modal-single.carousel.carousel-slider.pt-5    
                                                if (res.foto1)
                                                    .carousel-item
                                                        img(src=res.foto1 alt='carousel_one').responsive-img.materialboxed
                                        else
                                            #carousel-modal.carousel.carousel-slider.pt-5
                                                if (res.foto1)
                                                    .carousel-item
                                                        img(src=res.foto1 alt='carousel_one').responsive-img.materialboxed
                                                if (res.foto2)
                                                    .carousel-item
                                                        img(src=res.foto2 alt='carousel_two').responsive-img.materialboxed
                                                if (res.foto3)
                                                    .carousel-item
                                                        img(src=res.foto3 alt='carousel_three').responsive-img.materialboxed
                                                if (res.foto4)
                                                    .carousel-item
                                                        img(src=res.foto4 alt='carousel_four').responsive-img.materialboxed
                                                if (res.foto5)
                                                    .carousel-item
                                                        img(src=res.foto5 alt='carousel_five').responsive-img.materialboxed
                                                if (res.foto6)
                                                    .carousel-item
                                                        img(src=res.foto6 alt='carousel_six').responsive-img.materialboxed
        .container
            p.seccion-identify Categorías
            .divider.mb-3
        .section
            .row
                each cats in nav_categories
                    if (cats.idpadre === 0)
                        .col.m4.categories_section
                            a(href='/publish/' + cats.idcategoria + '/' + 0)
                                .category
                                    .category-img(style='z-index:1 !important;')
                                        img(src=cats.imagen).responsive-img.img
                                .category-title= cats.nombre
    .section.container     
        p.seccion-identify Aliados
        .divider.mb-3
    .row
        .col.m12
            #carousel-ally.carousel.carousel-slider.bs-5
                each img in row_ally
                    .carousel-item
                        img(src="img.logo").responsive-img
    .section
        .cut__section.bs-1
            .content
                .card.glass
                    .card-content
                        p.white-text.f-1.text-shadow.center-align Buscar comercio
                        .divider.mt-1.mb-1
                        form(action='/publish/search' method='POST').search-form
                            select(name='category')#category
                                option(disabled selected) Elija una categoría
                                each category_search in nav_categories
                                    option(value=category_search.idcategoria)=category_search.nombre
                            select#estado
                            select(name='city')#municipio
                            button(type='submit' data-tooltip='Buscar emprendimientos').tooltip.tooltip-top.tooltip-mobile.button_search
                                i.bx.bx-search
    .section.container
        .card.z-depth-5.message
            .card-content
                .row
                    .col.s12
                        p "La gratitud ante todo es una virtud que siempre nos acompaña, por eso es que en primer lugar hay que dar las gracias a Dios y a todas las personas que han hecho posible el crecimiento de éste proyecto. Una idea que nace desde una necesidad y poder hoy ofrecer este servicio a muchas personas nos llena de alegría y orgullo."
                .row
                    .col.s12
                        p.text-italic www.rubikate.com